<ol class="breadcrumb" style="font-size:28px;">
	<li class="active" style="color:#235064;"><strong>Admin Tools</strong></li>
</ol>

<div class="panel panel-default">
	<div class="panel-heading" style="font-size: 24px;">
		<span style="color:#235064;"><strong>Current Event (Advanced Tracker)</strong></span>
	</div>
	<div class="panel-body">
		<%= ApplicationHelper.f_label "Participants:" %>
		<ul>
			<% User.order(:username).each do |u|
				if u.in_event == true %>
				<li><%= u.display_name %></li>
				<% end
			end %>
		</ul>
		<%= form_for @event, url: {action: "update_event"}, method: "patch" do |f| %>

			<div class="checkbox">
				<%= f.check_box :disabled %>
				<strong>Disabled</strong>
			</div>

			<div class="form-group">
				<%= f.label :event_name %><br/>
				<%= f.text_field :name, :class => "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :participation_text %><br/>
				<%= f.text_field :participation_text, :class => "form-control" %>
			</div>

			<%= f.submit "Update Event", :class => "btn btn-primary" %> <%= link_to "Clear Participants", "/admin/clear_event", :method => :delete, :class => "btn btn-primary", :onclick => "return false;" %>
		<% end %>
	</div>
</div>

<div class="panel panel-default">
	<div class="panel-heading" style="font-size: 24px;">
		<span style="color:#235064;"><strong>Other admin panels</strong></span>
	</div>
	<div class="panel-body">
			<p>You can edit the <a href="/problemsets/edit">problemsets</a> to update new weekly exercises.</p>
			<p>Add <a href="/reminders">reminders</a> so nobody forgets planned events or competitions.</p>
	</div>
</div>
